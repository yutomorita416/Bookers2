<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
  <table>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </table>
  <%= link_to "user edit", edit_user_path(current_user.id) %>
</div>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h2>Book detail</h2>
<%= link_to user_path(@book.user.id) do %>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg" %>
<% end %>
<%= link_to @book.user.name, user_path(@book.user.id) %><br>
<%= link_to @book.title, book_path(@book.id) %>
<p><%= @book.body %></p>
<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>